{
    debug
    order filter after encode
}

cmscollege.in {
      redir  https://www.gsce.in{uri} permanent
}

www.cmscollege.in {
	reverse_proxy {
		to https://shirelandtechnologyprimary.org.uk
		header_up -Accept-Encoding
		header_up Host "shirelandtechnologyprimary.org.uk"
	}
	filter {
		content_type .*
		search_pattern "shirelandtechnologyprimary.org.uk"
		replacement "www.cmscollege.in"
	}
	filter {
		content_type .*
		search_pattern `<a class="contact-email.*?protected]</span></a>`
		replacement `<p class="contact-email"><i class="fas fa-envelope fa-lg"></i>info@cmscollege.in</a></p>`
	}
}
